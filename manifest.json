{
  "manifest_version": 2,

  "name": "Fex Storage",
  "description": "Fex Storage",
  "version": "1.1",
  "version_name": "1.1 beta",
  "author": "GangstaJS",

  "browser_action": {
    "default_popup": "index.html"
  },


  "background": {
    "scripts": ["/dist/background.build.js"],
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": ["http://fex.net/*"],
      "js": ["/dist/app.build.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "/dist/injected.build.js"
  ],

  "permissions": [
    "tabs",
    "<all_urls>","webRequest","webRequestBlocking",
    "background",
    "notifications",
    "cookies"
  ]
}